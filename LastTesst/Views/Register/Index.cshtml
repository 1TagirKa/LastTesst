@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model LastTesst.Models.RegistrationModel

@{
    ViewBag.Title = "Register";
    Layout = "_Layout";
}

@section styles
{
    <link rel="stylesheet" href="~/css/register.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.validate.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.validate.unobtrusive.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Bootstrap Simple Success Confirmation Popup</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
}

<div class="reg">
    <div class="container_reg">
        <div class="title_reg">Registration</div>
        <div class="content">
            <form asp-action="Register" asp-controller="Register" method="post">
                <div class="user-details">
                    
                    <div class="input-box">
                        <label asp-for="Name" class="details"></label>
                        <input asp-for="Name" placeholder="Enter your name" required>
                        <span asp-validation-for="Name"></span>
                    </div>
                    
                    <div class="input-box">
                        <label asp-for="Username" class="details"></label>
                        <input asp-for="Username" placeholder="Enter your username" required>
                        <span asp-validation-for="Username"></span>
                    </div>
                    
                    <div class="input-box">
                        <label asp-for="Email" class="details"></label>
                        <input asp-for="Email"  placeholder="Enter your email" required>
                        <span asp-validation-for="Email"> </span>
                    </div>
                    
                    <div class="input-box">
                        <label asp-for="Phone" class="details"></label>
                        <input asp-for="Phone" placeholder="Enter your number" required>
                        <span asp-validation-for="Phone"></span>
                    </div>
                    
                    <div class="input-box">
                        <label asp-for="Password" class="details"></label>
                        <input asp-for="Password" type="password" placeholder="Enter your password" required>
                        <span asp-validation-for="Password"></span>
                    </div>
                    
                    <div class="input-box">
                        <label asp-for="ConfirmPassword" class="details"></label>
                        <input asp-for="ConfirmPassword" type="password" placeholder="Confirm your password" required>
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>
                    
                </div>
                <div class="button">
                    <input type="submit" value="Register" href="#myModal" data-toggle="modal" required>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="myModal" class="modal fade">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header">
                <div class="icon-box">
                    <i class="material-icons">&#xE876;</i>
                </div>
                <h4 class="modal-title w-100">Awesome!</h4>
            </div>
            <div class="modal-body">
                <p class="text-center">You have successfully registered.Log into your account using this data.</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success btn-block" data-dismiss="modal" asp-controller="" asp-action="Index" >OK</button>
            </div>
        </div>
    </div>
</div>